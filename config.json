				{
					"key": "resource-description",
					"name": "<b>Description</b>",
					"required": false,
					"type": "textarea"
				},
				{
					"key": "resource-link",
					"name": "<b>Resource URL</b>",
					"required": false,
					"type": "text"
				},
				{
					"key": "resource-icon",
